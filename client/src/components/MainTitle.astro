---
import { Props } from "astro";

const { redLine, title } = Astro.props as Props;
---

<h1>
  <span class="redline">{redLine}</span>
  <span>{title}</span>
</h1>

<style lang="scss">
  h1 {
    font-family: "AvantGardeCTT", sans-serif;
    font-size: 100px;
    line-height: 120px;
    max-width: 570px;
    & .redline {
      position: relative;
    }
    & .redline::before {
      content: "";
      position: absolute;
      top: 70px;
      left: 0;
      width: 100%;
      height: 2rem;
      background-color: #FF35C7;
      z-index: -1;
    }
  }

  @media (max-width: 1279px) {
    h1 {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: 1rem;
      margin-bottom: 50rem;

      span {
        width: max-content;
        text-align: center;
      }
    }
  }
  @media (max-width: 1023px) {
    h1 {
      font-size: 3rem;
      line-height: 100%;
      margin-bottom: 30rem;

      & .redline::before {
        top: 2rem;
        height: 1rem;
      }
    }
  }
</style>