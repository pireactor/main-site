---
import { Props } from "astro";

const { redLine, title } = Astro.props as Props;
---

<h1>
  <span class="redline">{redLine}</span>
  <span>{title}</span>
</h1>

<style lang="scss">
  h1 {
    font-family: "AvantGardeCTT", sans-serif;
    font-size: 100px;
    line-height: 120px;
    max-width: 570px;
    & .redline {
      position: relative;
    }
    & .redline::before {
      content: "";
      position: absolute;
      top: 70px;
      left: 0;
      width: 100%;
      height: 2rem;
      background-color: #FF35C7;
      z-index: -1;
    }
  }
</style>